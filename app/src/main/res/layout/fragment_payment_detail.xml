<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.homebudget.scheduler.PaymentDetailFragment">

    <TableLayout
        android:id="@+id/payment_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="100dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/contractor"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:textIsSelectable="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/service"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:textIsSelectable="true" />
        </TableRow>

        <TableRow
            android:id="@+id/account_number_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/previousPayment"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_weight="0.2"
                android:background="@drawable/ic_baseline_chevron_left_24"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/account_number"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:textIsSelectable="true" />


            <Button
                android:id="@+id/nextPayment"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_weight="0.2"
                android:background="@drawable/ic_baseline_chevron_right_24"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/sum_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/sum"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:textIsSelectable="true"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:id="@+id/amountTableRow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:visibility="gone">


            <EditText
                android:id="@+id/amount"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:autofillHints=""
                android:gravity="center"
                android:hint="kwota"
                android:inputType="numberDecimal" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/payment_detail">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:text="Zapisz"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/payment_detail">

        <Button
            android:id="@+id/paid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:text="ZapÅ‚acono"
            android:visibility="visible" />

        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/orange"
            android:gravity="center"
            android:minWidth="130dp"
            android:text="Edytuj"
            android:visibility="visible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>